@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@using Kendo.Mvc.UI

<div class="jumbotron">
    <h1>Phoenix</h1>
    <p>Used Truck Appraisal for the 21<sup>st</sup> Century!</p>
</div>
<div class="row">
    <p class="lead">Start a New...</p>
    <div class="col-md-6">
        <a class="btn btn-primary" type="submit" href="/Units/Appraisal">Standard Trade</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-info" type="submit" href="#">Fleet Purchase</a>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <a class="btn btn-info" type="submit" href="/Units/Index">Find an Inspection</a>
    </div>
</div>
<hr />
<div class="table-responsive">
    <table class="table table-striped table-condensed"></table>
</div>
<div id="kendoSample">
    @(Html.Kendo().DropDownListFor(x => x.DealData).HtmlAttributes(new {
        data_bind = "value: ListItemId, source: someList", 
        data_text_field="name", data_value_field="value"
    }
    ))
</div>


@section Scripts {
    <script>
        var viewModel;
        $(document).ready(function () {
       
            viewModel = kendo.observable({
                someList: [{ name: 'One', value: 1 }, { name: 'Two', value: 2 }],
                ListItemId: 1
            });

            kendo.bind($('#kendoSample'), viewModel);
        })
    </script>
}
