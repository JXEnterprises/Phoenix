@page 
@model Phoenix.Pages.Units.CreateModel 
@{ ViewData["Title"] = "New Appraisal"; }

<h2>New Inspection</h2>
<hr />
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Unit.CustomerName" class="control-label"></label>
        <input asp-for="Unit.CustomerName" class="form-control" />
        <span asp-validation-for="Unit.CustomerName" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Unit.CustomerAddress" class="control-label"></label>
        <input asp-for="Unit.CustomerAddress" class="form-control" />
        <span asp-validation-for="Unit.CustomerAddress" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Unit.AppraiserName" class="control-label"></label>
        <input asp-for="Unit.AppraiserName" class="form-control" />
        <span asp-validation-for="Unit.AppraiserName" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Unit.ModelYear" class="control-label"></label>
        <input asp-for="Unit.ModelYear" class="form-control" />
        <span asp-validation-for="Unit.ModelYear" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Unit.VIN" class="control-label"></label>
        <input asp-for="Unit.VIN" class="form-control" />
        <span asp-validation-for="Unit.VIN" class="text-danger"></span>
    </div>

    @foreach(var item in Model.UnitCharacteristics) {
        <div class="form-group row">
            <label class="control-label">
                @item.UnitCharacteristicName
            </label>
            @if (item.UnitCharacteristicType == "YesNo")
            {
                <div class="radio">
                    <label>
                    <input type="radio" name="@item.UnitCharacteristicName" id="@item.UnitCharacteristicName" value="Yes">
                        Yes 
                    </label>
                </div>
                <div class="radio">
                    <label>
                    <input type="radio" name="@item.UnitCharacteristicName" id="@item.UnitCharacteristicName" value="No">
                        No
                    </label>
                </div>
            } else if (item.UnitCharacteristicType == "List") {
                    @foreach(var opt in item.ListValues)
                    {
                        <div class="radio">
                            <label>
                                <input type="radio" name="@item.UnitCharacteristicName" 
                                    id="@item.UnitCharacteristicName" value="@opt.ListValueId">
                                @opt.ListValueName
                            </label>
                        </div>
                    }
            } else {
                <input class="form-control" id="@item.UnitCharacteristicName" />
            }
        </div>
    }
    
    <div class="form-group row">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }