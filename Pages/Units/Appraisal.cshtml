@page
@model AppraisalModel
@{ 
  ViewData["Title"] = "Used Truck Appraisal";
}

<div class="container-fluid">
  <div class="row">
   <div class="col-md-6 col-sm-6 col-xs-12">
    <form class="form-horizontal" method="post">
      
     <div class="form-group ">
      <label class="control-label col-sm-2 requiredField" asp-for="AppraisalData.Appraisal.SubmissionDate"></label>
      <div class="col-sm-10">
       <input class="form-control" asp-for="AppraisalData.Appraisal.SubmissionDate"/>
       <span asp-validation-for="AppraisalData.Appraisal.SubmissionDate" class="text-danger"></span>
      </div>
     </div>
     <div class="form-group ">
      <label class="control-label col-sm-2 requiredField" asp-for="AppraisalData.Appraisal.Branch"></label>
      <div class="col-sm-10">
        <select class="select form-congrol" asp-for="AppraisalData.Appraisal.Branch"
                asp-items="Model.AppraisalData.BranchOptions">
          <!-- <option value="">-- Select Branch --</option> -->
        </select>
       <span asp-validation-for="AppraisalData.Appraisal.SubmissionDate" class="text-danger"></span>
      </div>
     </div>
     <div class="form-group hidden" id="branch-other">
      <label class="control-label col-sm-2 requiredField" asp-for="AppraisalData.Appraisal.BranchOther"></label>
      <div class="col-sm-10">
       <input class="form-control" asp-for="AppraisalData.Appraisal.BranchOther"/>
       <span asp-validation-for="AppraisalData.Appraisal.BranchOther" class="text-danger"></span>
      </div>
     </div>
     <div class="form-group">
      <div class="col-sm-4 col-sm-offset-2">
       <button class="btn btn-primary " type="submit" asp-page-handler="Save">
        Save
       </button>
      </div>
	  <div class="col-sm-4">
       <button class="btn btn-danger" type="submit" asp-page-handler="Finish">
        Finish
       </button>
      </div>
     </div>
    </form>
   </div>
  </div>
 </div>